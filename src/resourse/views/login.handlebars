 <div class="container content-wrapper">
        <div class="login-container active">
          <div class="login">
            <div class="login-center">
              <div class="login-top">
                <div class="login-brand">
                  <h1 class="login-brand__title text-center">
                    YOUR ACCOUNT FOR EVERYTHING MILIST
                  </h1>
                </div>
              </div>
              <div class="login-form">
                <div class="login-social">
                  <img
                    src="/images/login/icon-google.svg"
                    alt=""
                    class="login-social__icon"
                  />
                  <span class="login-social__text">Sign in with google</span>
                </div>
                <div class="login-divider">
                  <span class="login-divider__text">or sign in with email</span>
                </div>
                <form action="" method="post">
                  <div class="login-form__group">
                    <div class="login-form__item">
                      <label for="name" class="login-form__label"
                        >Account</label
                      >
                      <input
                        type="email"
                        class="login-form__input"
                        
                        name="username"
                        autocomplete="off"
                        required
                      />
                    </div>
                    <div class="login-form__item">
                      <label for="password" class="login-form__label"
                        >Password</label
                      >
                      <div class="login-form__password">
                        <input
                          type="password"
                          class="login-form__input"
                          name="password"
                          autocomplete="off"
                          required
                        />
                        <img
                          src="/images/login/icon-eye-off.svg"
                          class="icon-eye"
                          onclick="showPassword()"
                        />
                      </div>
                    </div>
                    <div class="login-form__reset">
                      <span><a href="#">Forgot password?</a></span>
                    </div>
                  </div>
                  <button type="submit" class="login-form__submit btn-base btn-solid">
                    Login
                  </button>
                  <span class="login-form__register fz-15 text-gray">
                    Not a member?
                    <a href="javascript:void(0);" id="signup">Join us.</a>
                  </span>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="signup-container">
          <div class="signup">
            <div class="wrapper signup-wrapper">
              <div class="signup-left">
                <div class="signup-top">
                  <h1 class="signup-top__title text-center">
                    BECOME A MILIST MEMBER
                  </h1>
                  <p class="signup-top__text fz-15 fw-4 text-gray">
                    Create your Milist Member profile and get first access to
                    the very best of Milist products, inspiration and community.
                  </p>
                </div>
                <form action="#" class="signup-form">
                  <div class="signup-form__group">
                    <label for="name" class="signup-form__label">Name</label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="signup-form__input"
                    />
                  </div>
                  <div class="signup-form__group">
                    <label for="phone" class="signup-form__label"
                      >Phone number</label
                    >
                    <input
                      type="text"
                      id="phone"
                      inputmode="numeric"
                      oninput="onlyInputNumber(this)"
                      name="phone"
                      class="signup-form__input"
                    />
                  </div>
                  <div class="signup-form__group">
                    <label for="email" class="signup-form__label">Email</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="signup-form__input"
                    />
                  </div>
                  <div class="signup-form__group">
                    <label for="password" class="signup-form__label"
                      >Password</label
                    >
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="signup-form__input"
                    />
                  </div>
                  <div class="signup-form__group">
                    <label for="password-again" class="signup-form__label"
                      >Password again</label
                    >
                    <input
                      type="password"
                      id="password-again"
                      name="password-again"
                      class="signup-form__input"
                    />
                  </div>
                  <button class="signup-form__submit btn-base btn-solid">
                    Register
                  </button>
                  <div class="signup-form__register">
                    <span href="#">
                      Already have an account?
                      <a href="javascript:void(0)" id="signin">Sign in</a>
                    </span>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

     <script src="/js/login.js"></script>