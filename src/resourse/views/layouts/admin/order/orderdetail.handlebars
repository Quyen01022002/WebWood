            // Thêm các phần khác của hóa đơn vào đây...
        ],
    });

    try {
        const buffer = await Packer.toBuffer(doc);
        fs.writeFileSync('invoice.docx', buffer);
        console.log('File Word đã được tạo thành công.');
    } catch (error) {
        console.error('Lỗi khi tạo file Word:', error);
    }
}

    </script>
  </body>
</html>
